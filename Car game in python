command=""
started = False
stopped = False
while True:
    
    command = input("> ").lower()
    if command == "start":
        if started:
            print("car already started!")
        else:
            started = True
            print("car started... ")

    elif command == "stop":
        if stop:
            print("car is already stopped!")
        else:
            stopped = True
            print("car stopped... ")

    elif command == "help":
        print("""
    start - to start the car
    stop - to stop the car
    quit - to quit the game
        """)
        
    elif command == "quit":
         break
        
    else:
        print("sorry i dont understand that...")
